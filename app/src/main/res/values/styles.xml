<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Здесь картинка с определением всех основных элементов окна и названием их цветов -->
    <!-- https://treyrobinson.net/blog/android-l-tutorials-part-2-material-theme-colors/ -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">

        <!-- ActionBar color-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- ActionBar shadow color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Text color of Views in window -->
        <item name="android:textColor">@color/foregroundCustom</item>

        <!-- To change the popup menu and app text color  -->
        <item name="android:textColorPrimary">@color/foregroundCustom</item>

        <!-- Menu item background -->
        <item name="android:itemBackground">@color/colorPrimaryDark</item>

        <!-- Buttons Style -->
        <item name="buttonStyle">@style/AppTheme.Button</item>

        <item name="actionBarPopupTheme">@style/SubmenuStyle</item>
    </style>

    <!-- Buttons style  -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- All activities TextView style  -->
    <style name="TextViewCustom" parent="@android:style/TextAppearance">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Popup menu style -->
    <style name="SubmenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/foregroundCustom</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>